@import '../lib/weui.wxss';
view{
  display: block;
}
.container{
  margin: 0;
  padding: 0;
}
image{
  max-width: 100%;
  max-height: 100%;
}
.head{
  display: block;
  width: 100%;
  height: 105.46rpx;
  background-color: #785e4d;
  z-index: 10;
  position: relative;
}
.home{
  width: 46rpx;
  height: 44rpx;
  margin: 30rpx 0 0 46rpx;
}
.logo{
  width: 366rpx;
  height: 60rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate3d(-50%,-50%,0);
}
.navbar{
  width: 36rpx;
  height: 31rpx;
  position: absolute;
  right: 68rpx;
  top: 36rpx;
}
.bannerWrap{
  width: 100%;
  position: relative;
}
.nav{
  width: 100%;
  height: 93.75rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  background: rgba(255,255,255,.8);
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.navList{
  width: 25%;
  padding-top: 29rpx;
}
.navList view{
  width: 105.46875rpx;
  height: 46.875rpx;
  background-repeat: no-repeat;
  background-position: center center;
  background-size: contain;
  margin: 0 auto;
}
.navList:nth-child(1) view{
  background-image: url(http://m.atfck.com/extend/images/about.png);
}
.navList:nth-child(2) view{
  background-image: url(http://m.atfck.com/extend/images/expert.png);
}
.navList:nth-child(3) view{
  background-image: url(http://m.atfck.com/extend/images/case.png);
}
.navList:nth-child(4) view{
  background-image: url(http://m.atfck.com/extend/images/package.png);
}
.banner{
  display: block;
  width: 100%;
  height: 626.953125rpx;  
}
.banner swiper-item{
  display: block;
}
.banner swiper-item image{
  width: 100%;
  height: 100%;
}
.xiangmu{
  width: 100%;
  text-align: center;
  margin-top: 20rpx;
}
.xiangmu text{
  display: block;
}
.h3{
  font-size: 34rpx;
}
.h4{
  font-size: 26rpx;
}
.xm{
  width: 640rpx;
  margin: 30rpx auto 0;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
}
.xm view{
  width: 130rpx;
  margin: 0 15rpx 30rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.xm view image{
  width: 130rpx;
  height:130rpx;
}
.xm view text{
  font-size: 27rpx;
}
.myzd{
  width: 624rpx;
  height: 70rpx;
  line-height: 70rpx;
  margin: 0 auto;
  background-color: #db5237;
  border-radius: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 35rpx;
}
.nxlj{
  color: #fff;
  padding-left: 20rpx;
}
.ljgd{
  width: 180rpx;
  height: 60rpx;
  margin-right: 5rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: #fff;
  border-radius: 120rpx;
  color: #db5237;
}
.news{
  width: 680rpx;
  height: 72rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  padding: 12rpx 40rpx;
  background-color: #f9ece9;  
  border-top: 1rpx solid #d4d4d4;
  border-bottom: 1rpx solid #d4d4d4;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.news .left{
  width: 73rpx;
  height: 72rpx;
  background-image: url(http://m.atfck.com/extend/images/news.png);
  background-position: left;
  background-repeat: no-repeat;
  background-size: contain;
}
.news .right{
  width: 595rpx;
  height: 72rpx;
  line-height: 72rpx;
}
.news .right text{
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 30rpx;
  color: #e90000;
}
.zj{
  width: 100%;
}
.zj text{
  display: block;
  text-align: center;
}
.zjlist{
  width: 700rpx;
  height: 362rpx;
  margin: 20rpx auto 0;
  position: relative;
}
.zjlist image{
  width: 398rpx;
}
.zjlist .textborder{
  width: 284rpx;
  height: 320rpx;
  border: 8rpx solid #978376;
  position: absolute;
  right: 30rpx;
  top: 13rpx;
}
.zjlist .textborder text{
  width: 280rpx;
  background-color: #fff;
  position: absolute;
  right: -25rpx;
  top: 0;
  font-size: 29rpx;
  text-align: left;
  padding: 5rpx 0;
}
.guahao{
  width: 90%;
  margin: 20rpx auto 0;
}
.guahao .h3,.guahao .h4{
  display: block;
  text-align: center;
}
.guahao .h4 text{
  color: #fc5350;
  display: inline-block;
}
.guahao form{
  width: 640rpx;
  display: flex;
  margin-top: 20rpx;
  font-size: 32rpx;
}
.guahao input{
  border: 1rpx solid #ccc;
  padding-left: 5rpx;
  width: 640rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
  border-radius: 10rpx;
  margin-top: 10rpx;
  text-indent: 10rpx;
}
.guahao textarea{
  border: 1rpx solid #ccc;
  padding: 10rpx;  
  width: 640rpx;
  height: 250rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
  border-radius: 10rpx;
  margin-top: 10rpx;
}
.tjxx{
  width: 100%;
  margin-top: 18rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.tjxx button{
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
}
.tjxx button:first-child{
  background-color: #c03933;
}
.tjxx button:last-child{
  background-color: #f29700;
}
.footer{
  width: 100%;
  padding-bottom: 30rpx;
  margin-top: 30rpx;
  background-color: #434448;
}
.contactimg{
  width: 680rpx;
  height: 134rpx;
  margin: 0 auto 0;
  display: flex;
  padding-top: 30rpx;
}
.contact{
  margin-top: 30rpx;
  padding: 0 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.contact .jyl image{
  width: 326rpx;
  height: 266rpx;
}
.contact .right{
  width: 340rpx;
  color: #fff;
}
.contact .right text{
  display: flex;
  font-size: 30rpx;
}
.contact .lylx{
  padding-top: 5rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.contact .lylx button{
  font-size: 25rpx;
  color: #fff;
}
.contact .lylx button:first-child{
  background-color: #c03933;
}
.contact .lylx button:last-child{
  background-color: #f29700;
}
.copyright{
  padding: 5rpx 0;
}
.copyright text{
  font-size: 24rpx;
  display: block;
  text-align: center;
}