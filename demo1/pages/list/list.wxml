<view class="page">
  <scroll-view scroll-y="true" class='lists'>
    <block wx:for="{{lists}}">
      <view class='list' bindtap='edit' data-id="{{item.id}}">
        <view class='content'>{{item.content}}</view>
        <view class='time'>创建时间：{{item.time}}</view>
      </view>
    </block>
  </scroll-view>
  <view class='add' bindtap='add'>add</view>
</view>