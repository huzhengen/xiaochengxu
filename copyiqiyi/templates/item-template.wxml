<template name="video-item">
  <view class='video-list'>
    <view class='wrap-video'>
      <view class='video-title'>{{item.title}}</view>
      <video id='myVideo' src='{{item.video_url}}' danmu-list="danmuList" enable-danmu danmu-btn controls></video>
      <view class='btn'></view>
    </view>
    <view class='video-option'>
      <view class='watch-num'>
        <image src='../../images/options/c-icon-playAmount.png'></image>
        <text>{{item.watch_num}}</text>
      </view>
      <view class='share'>
        <image src='../../images/options/c-icon-share.png'></image>
        <text>分享</text>
      </view>
      <view class='like'>
        <image src='../../images/options/c-icon-love.png'></image>
        <text>{{item.like_num}}</text>
      </view>
    </view>
  </view>
</template>